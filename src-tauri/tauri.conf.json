{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-motrix",
  "version": "0.1.0",
  "identifier": "com.tauri-motrix.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-motrix",
        "width": 800,
        "height": 600,
        "minWidth": 500,
        "minHeight": 550
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "sidecar/aria2c"
    ]
  }
}